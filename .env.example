# ---- Docker Compose (PostgreSQL) ----
POSTGRES_USER=zportal
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=zportal

# ---- App (server): use hostname `db` when app runs in same Docker network ----
DATABASE_URL=postgresql://zportal:change_me_strong_password@db:5432/zportal

# ---- Production: JWT and server ----
JWT_SECRET=change_me_to_a_long_random_secret_min_32_chars
NODE_ENV=production
PORT=4001

