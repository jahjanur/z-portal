{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Language & Environment === */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,

    /* === Source Maps & Declarations === */
    "sourceMap": true,
    "declaration": true,

    /* === Misc === */
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}